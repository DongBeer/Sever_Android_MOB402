<div class="container">
  <div class="row">
    <div class="col">
      <h2>Danh Sách Sản Phẩm</h2>
    </div>
    <div class="col" style="margin-top: 30px;">
      <form class="d-flex" role="search" action="/search1" method="post">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search1">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </div>
      
      

      <table class="table">
        <thead>
          <tr>
            <th scope="col">STT</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Giá tiền</th>
            <th scope="col">Số lượng</th>
            <th scope="col">anh sp</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Thao tác</th>
          </tr>
        </thead>
        <tbody>
          {{#each items}}
          <tr>
            <th scope="row">{{@index}}</th>
            <td>{{this.ten_sp}}</td>
            <td>{{this.gia_tien}}</td>
            <td>{{this.so_luong}}</td>
            <td><img src="{{this.anh_sp}}" style="width: 100px;"></td>
            <td>{{this.mo_ta}}</td>

            <td>
              <button
                type="button"
                class="btn btn-warning"
                data-toggle="modal"
                data-target="#suaSanPhamModal"
              >
                <a class="dropdown-item" href="/edit/{{this.id}}">Sửa</a>
              </button>
              <button
                type="button"
                class="btn btn-danger"
                data-toggle="modal"
                data-target="#xoaSanPhamModal"
                onclick="confirmDelete('{{this.id}}')"
              >
              Xoa
                
              </button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>

      <button type="button" class="btn btn-primary">
        <a class="dropdown-item" href="./add">Thêm Sản Phẩm </a>
      </button>
    </div>

    <script>
    function confirmDelete(itemId) {
        // Hiển thị hộp thoại xác nhận
        var isConfirmed = confirm("Bạn có chắc chắn muốn xóa không?");

        // Nếu người dùng chọn "OK", chuyển hướng đến URL xóa
        if (isConfirmed) {
            window.location.href = "/delete/" + itemId;
        }
    }
</script>